<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<launch>
  <node name="bp_harvester" pkg="behavioral_planner" type="bp_harvester.py" output="screen">
  </node>

  <!-- STRETCH DRIVER -->
  <param name="/stretch_driver/broadcast_odom_tf" type="bool" value="true"/>
  <param name="/stretch_driver/fail_out_of_range_goal" type="bool" value="false"/>
  <include file="$(find stretch_core)/launch/stretch_driver.launch" pass_all_args="true"/>
  <!-- -->

  <!-- HEAD CAMERA -->
  <include file="$(find realsense2_camera)/launch/rs_camera.launch" >
  <arg name="camera" value="head_camera"/>
  <arg name="serial_no"     value="033422070537"/>
  </include>
  <!-- -->

  <!-- WRIST CAMERA -->
  <include file="$(find realsense2_camera)/launch/rs_camera.launch" >
  <arg name="camera" value="wrist_camera"/>
  <arg name="serial_no"     value="909512071673"/>
  </include>
  <!-- -->

  <!-- ARUCO -->  
  <include file="$(find aruco_ros)/launch/bp_head_aruco.launch">
  </include>

  <include file="$(find aruco_ros)/launch/bp_wrist_aruco.launch">
  </include>
  <!-- -->

  <!-- MANIPULATION -->
  <node name="manipulation_pr4" pkg="ifa_teamg" type="manipulation_pr4.py" output="screen">
  </node>
  <!-- <node name="dummy_man" pkg="behavioral_planner" type="dummy_man.py" output="screen">
  </node> -->
  <!-- -->

  <node name="dummy_nav" pkg="behavioral_planner" type="dummy_nav.py" output="screen">
  </node>

  <!-- RVIZ --> 
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find behavioral_planner)/launch/bp.rviz"/>
  <!-- -->
</launch>